/*
Default extensions that we needed
Material icon Theme for icons
Prettier
Indenticator
Yoru for general theme
ObsidianMD 
*/

{
  "workbench.colorTheme": "Yoru", // default theme
  "workbench.colorCustomizations": {}, // default color customizations 
  "editor.matchBrackets": "never",
  "workbench.iconTheme": "material-icon-theme", // default icon theme
  "terminal.integrated.defaultProfile.windows": "Git Bash", // default terminal for windows
  "workbench.sideBar.location": "right", // lateral bar location
  "workbench.editor.showTabs": false, // navigation tabs
  "editor.scrollbar.vertical": "hidden", // scrollbar vertical visibility
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.formatOnSave": true, // format on save
  "editor.minimap.enabled": false, // disable minimap
  "indenticator.color.dark": "rgba(255, 255, 255, .1)", // indenticator settings
  "editor.guides.indentation": false, // indenticator settings
  "indenticator.width": 0.1, // indenticator settings
  "workbench.activityBar.visible": true, // activiy bar visibility
  "workbench.statusBar.visible": false, // status bar visibility
  "window.zoomLevel": 1, // default zoom level for editor
  "workbench.productIconTheme": "material-product-icons" // default product icon theme

// copy and paste into your config of vsc
